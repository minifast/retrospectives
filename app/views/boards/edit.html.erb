<%= turbo_frame_tag dom_id(@board.board, :header) do %>
  <%= form_with(model: @board.board) do |form| %>
    <div class="flex">
      <div class="flex-grow">
        <%= form.label :name, class: 'block text-sm font-medium text-gray-700 sr-only' %>
        <div class="relative rounded-md shadow-sm">
          <%= form.text_field :name, class: form.object.errors.include?(:name) ? "block w-full border-gray-300 focus:outline-none focus:ring-orange-500 focus:border-orange-500 sm:text-sm rounded-md" : "block w-full pr-10 border-red-300 text-red-900 placeholder-red-300 focus:outline-none focus:ring-red-500 focus:border-red-500 sm:text-sm rounded-md", aria: form.object.errors.include?(:name) ? {} : {invalid: true, describedby: 'name_errors'} %>
          <% if form.object.errors.include?(:name) %>
            <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
              <%= inline_svg_tag 'exclamation.svg', class: 'h-5 w-5 text-red-500' %>
            </div>
          <% end %>
        </div>
        <% if form.object.errors.include?(:name) %>
          <p class="mt-2 text-sm text-red-600" id="name_errors"><%= form.object.errors.full_messages_for(:name).first %></p>
        <% end %>
      </div>

      <div class="ml-1">
        <%= link_to board_path(@board.board), class: "inline-flex justify-center px-4 py-2.5 sm:py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
          <span class="sr-only">Cancel</span>
        <% end %>
        <%= form.button type: :submit, class: "inline-flex justify-center px-4 py-2.5 sm:py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-orange-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
          </svg>
          <span class="sr-only">Update Board</span>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
