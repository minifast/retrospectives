<footer class="bg-white">
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 md:flex md:items-center md:justify-between lg:px-8">
    <div class="flex justify-center space-x-6 md:order-2">
      <%= link_to 'https://twitter.com/minifast', class: 'text-gray-400 hover:text-gray-500' do %>
        <span class="sr-only">Twitter</span>
        <%= inline_svg_tag 'twitter.svg', class: 'h-6 w-6' %>
      <% end %>

      <%= link_to 'https://github.com/minifast/retrospectives', class: 'text-gray-400 hover:text-gray-500' do %>
        <span class="sr-only">Github</span>
        <%= inline_svg_tag 'github.svg', class: 'h-6 w-6' %>
      <% end %>
    </div>
    <div class="mt-8 md:mt-0 md:order-1">
      <p class="text-center text-base text-gray-400">&copy; <%= Time.current.year %> Ministry of Velocity LLC. All rights reserved.</p>
    </div>
  </div>
</footer>
