<%= turbo_stream_from board %>

<%= turbo_frame_tag dom_id(board, :header) do %>
  <div class="flex space-x-4 items-center">
    <h2 class="text-3xl font-bold leading-tight text-gray-900"><%= board.name %></h2>

    <%= link_to [:edit, board], class: "inline-flex justify-center px-2 py-2 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900" do %>
      <%= inline_svg_tag 'board_header/pencil.svg', class: 'h-5 w-5 text-gray-400' %>
      <span class="sr-only">Edit Board</span>
    <% end %>
  </div>
<% end %>
