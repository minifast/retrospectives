<nav class="bg-white border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex">
        <div class="flex-shrink-0 flex items-center">
          <%= inline_svg_tag 'minifast.svg', class: 'hidden h-8 w-auto text-orange-700 sm:block' %>
          <h1 class="font-serif tracking-wide font-extrabold text-2xl sm:ml-4">Retro</h1>
        </div>
        <div class="flex space-x-8 ml-6">
          <%= link_to_unless current_page?(root_path) || current_page?(boards_path), 'Boards', root_path, class: 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-2 border-b-2 font-medium' do %>
            <span class="border-orange-500 text-gray-900 inline-flex items-center px-1 pt-2 border-b-2 font-medium">Boards</span>
          <% end %>
        </div>
      </div>
      <div class="flex items-center">
        <% if user_signed_in? %>
          <%= button_to 'Sign out', user_session_path, class: 'text-gray-900 inline-flex items-center text-sm font-medium', method: :delete, data: {turbo: false} %>
          <%= image_tag current_user.image_url, class: 'hidden h-8 w-8 rounded-full sm:block sm:ml-4', alt: current_user.name, onerror: "this.src = '#{asset_path('avatar/profile.svg')}'" %>
        <% else %>
          <%= button_to 'Sign in', user_google_oauth2_omniauth_authorize_path, class: 'text-gray-900 inline-flex items-center text-sm font-medium', method: :post, data: {turbo: false} %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
