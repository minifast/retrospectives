<div class="relative bg-orange-700 overflow-hidden">
  <div class="max-w-7xl mx-auto">
    <div class="relative z-20 pb-8 bg-orange-700 sm:pb-16 md:pb-20 lg:max-w-2xl lg:w-full lg:pb-28 xl:pb-32">
      <svg class="hidden lg:block absolute right-0 inset-y-0 h-full w-48 text-orange-700 transform translate-x-1/2" fill="currentColor" viewBox="0 0 100 100" preserveAspectRatio="none" aria-hidden="true">
        <polygon points="50,0 100,0 50,100 0,100" />
      </svg>

      <div>
        <div class="relative pt-6 px-4 sm:px-6 lg:px-8">
          <nav class="relative flex items-center justify-between sm:h-10 lg:justify-start" aria-label="Global">
            <%= inline_svg_tag "minifast.svg", class: 'hidden h-14 w-auto text-gray-50 md:block' %>
            <div class="md:ml-6 md:block md:space-x-8">
              <%= button_to 'Sign in', user_google_oauth2_omniauth_authorize_path, class: 'font-medium text-gray-50 hover:text-orange-100', method: :post, data: {turbo: false} %>
            </div>
          </nav>
        </div>
      </div>

      <section class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
        <div class="sm:text-center lg:text-left">
          <h1 class="text-4xl font-bold tracking-wide font-serif text-gray-50 sm:text-5xl md:text-6xl">
            <span class="block xl:inline">Retro</span>
          </h1>
          <p class="mt-3 text-base text-gray-50 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 lg:mx-0">
            A retrospective tool built for highly collaborative remote teams.
          </p>
          <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
            <div class="mt-3 sm:mt-0">
              <%= button_to 'Get started', user_google_oauth2_omniauth_authorize_path, class: 'w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-orange-700 bg-orange-50 hover:bg-orange-100 md:py-4 md:text-lg md:px-10', method: :post, data: {turbo: false} %>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
  <div class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
    <%= inline_svg_tag 'hero.svg', class: 'bg-white h-56 w-full object-cover sm:h-72 md:h-96 lg:w-auto lg:h-full' %>
  </div>
</div>
